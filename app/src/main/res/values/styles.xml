<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/textColor</item>
        <item name="colorPrimaryDark">@color/backgroundColor</item>
        <item name="colorAccent">@color/textColor</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
       <item name="searchViewStyle">@style/searchStyle</item>

    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/textColor</item>
        <!--This line changes the color of icons in toolbar (back, overflow search_menu icons)-->
        <item name="android:textColorSecondary">@color/textColor</item>

    </style>


    <style name="searchStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:queryHint">@string/search</item>
        <item name="android:searchHintIcon">@null</item>

    </style>
</resources>